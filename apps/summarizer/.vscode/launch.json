    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "debugpy",
            "python": "${workspaceFolder}/venv/bin/python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.app.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Streamlit",
            "type": "debugpy",
            "python": "${workspaceFolder}/venv/bin/python",
            "request": "launch",
            "module": "streamlit",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "run",
                "./frontend/streamlit_app.py",
                "--server.port",
                "8501"
            ],
            "jinja": true
        }
    ]
}